{
    "compilerOptions": {
        "noEmit": true,
        "target": "ES6",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "sourceMap": true,
        "experimentalDecorators": true,
        "jsx": "react",

        "baseUrl": ".",
        "paths": {
            "client/*": [ "./src/*" ],
            "@ff/browser/*": [ "libs/ff-browser/source/*" ],
            "@ff/core/*": [ "libs/ff-core/source/*" ],
            "@ff/ui/*": [ "libs/ff-ui/source/*" ]
        }
    },
    "include": [
        "src/**/*"
    ]
}
